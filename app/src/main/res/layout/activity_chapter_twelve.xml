<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chapter_twelve_text_view1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Palette"/>

        <TextView
            android:id="@+id/chapter_twelve_text_view2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Elevation"/>

        <TextView
            android:id="@+id/chapter_twelve_text_view3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Tinting"/>

        <TextView
            android:id="@+id/chapter_twelve_text_view4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Clipping"/>

        <TextView
            android:id="@+id/chapter_twelve_text_view5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="RecyclerView"/>

        <TextView
            android:id="@+id/chapter_twelve_text_view6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CardView"/>

        <TextView
            android:id="@+id/chapter_twelve_text_view7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Transtion"/>

        <TextView
            android:id="@+id/chapter_twelve_text_view8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="MDAnim"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
